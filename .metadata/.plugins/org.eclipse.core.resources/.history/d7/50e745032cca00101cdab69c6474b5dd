spring.application.name=video-backend
# --- Database ---
spring.datasource.url=jdbc:mysql://localhost:3306/videodb?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
spring.datasource.username=root
spring.datasource.password=root
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true


# --- File upload settings ---
spring.servlet.multipart.max-file-size=1024MB
spring.servlet.multipart.max-request-size=1024MB


# storage path (create this folder or change)
app.storage.path=./data/videos


# JWT
app.auth.jwtSecret=ChangeThisSecretToAStrongRandomString
app.auth.jwtExpirationMs=86400000


# CORS allowed origins (adjust for your frontend dev server)
app.cors.allowed-origins=http://localhost:3000


# Server port (optional)
server.port=8080